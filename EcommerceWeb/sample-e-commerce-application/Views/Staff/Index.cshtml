@model IEnumerable<sample_e_commerce_application.Models.Staff>







<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Simple Responsive Admin</title>
    <!-- BOOTSTRAP STYLES-->
    <link href="~/Content/assets/css/bootstrap.css" rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    <link href="~/Content/assets/css/font-awesome.css" rel="stylesheet" />
    <!-- CUSTOM STYLES-->
    <link href="~/Content/assets/css/custom.css" rel="stylesheet" />
    <!-- GOOGLE FONTS-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
</head>
<body>



    <div id="wrapper">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="adjust-nav">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                  

                </div>

               
            </div>
        </div>
        <!-- /. NAV TOP  -->
        <nav class="navbar-default navbar-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav" id="main-menu">



                    <li class="active-link">

                        <h3 class="fa fa-desktop ">@Html.ActionLink("Staff", "Index", "Staff",null, new { style = "text-decoration:none;" }) </h3>
                    </li>


                    <li>
                        <h3 class="fa fa-table ">@Html.ActionLink("Branch", "Index", "Branch", null, new { style = "text-decoration:none;" }) </h3>
                    </li>
                    <li>
                        <h3 class="fa fa-edit ">@Html.ActionLink("buildings", "Index", "Rent", null, new { style = "text-decoration:none;" }) </h3>
                    </li>


                    <li>
                        <h3 class="fa fa-qrcode ">@Html.ActionLink("Owner", "Index", "Owner", null, new { style = "text-decoration:none;" }) </h3>
                    </li>


                    <li>
                        <h3 class="fa fa-desktop ">@Html.ActionLink("Staff based on position", "position", "Staff", null, new { style = "text-decoration:none;" }) </h3>
                    <li>
                        <h3 class="fa fa-qrcode ">@Html.ActionLink("Buildings based on City", "city", "Rent", null, new { style = "text-decoration:none;" }) </h3>
                    </li>

                    <li>
                        <h3 class="fa fa-table " ">@Html.ActionLink("Number of buildings", "Branch", "Branch", null, new { style = "text-decoration:none;" }) </h3>
                    </li>

                    <li>
                        <h3 class="fa fa-bar-chart-o">Settings </h3>
                    </li>

                   

                </ul>
            </div>

        </nav>
        <!-- /. NAV SIDE  -->
        <div id="page-wrapper">
            <div id="page-inner">
                <div class="row">
                    <div class="col-lg-8">
                        <h2>ADMIN DASHBOARD</h2>
                    </div>
                </div>
                <!-- /. ROW  -->
             
               
                <!-- /. ROW  -->
               
                <p>
                   <center> @Html.ActionLink("Create New", "Create",null,new { @class = "btn btn-primary" })</center>
                </p>

                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.branch.Street)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Fname)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Lname)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Position)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DOB)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Salary)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.branch.Street)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Fname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Lname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Position)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DOB)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Salary)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.StaffNo }, new { @class = "btn btn-success" }) 
                                @Html.ActionLink("Details", "Details", new { id = item.StaffNo }, new { @class = "btn btn-warning" }) 
                                @Html.ActionLink("Delete", "Delete", new { id = item.StaffNo }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }

                </table>

                <!-- /. ROW  -->
                <div class="row">
                    <div class="col-lg-12 ">
                        <br />

                    </div>
                </div>
                <!-- /. ROW  -->
            </div>
            <!-- /. PAGE INNER  -->
        </div>
        <!-- /. PAGE WRAPPER  -->
    </div>
    <div class="footer">


        <div class="row">
            <div class="col-lg-12">
                &copy;  2020 | Design by Charith Vishan
            </div>
        </div>
    </div>


    <!-- /. WRAPPER  -->
    <!-- SCRIPTS -AT THE BOTOM TO REDUCE THE LOAD TIME-->
    <!-- JQUERY SCRIPTS -->
    <script src="~/Content/assets/js/jquery-1.10.2.js"></script>
    <!-- BOOTSTRAP SCRIPTS -->
    <script src="~/Content/assets/js/bootstrap.min.js"></script>
    <!-- CUSTOM SCRIPTS -->
    <script src="~/Content/assets/js/custom.js"></script>


</body>
</html>

